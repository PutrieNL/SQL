CREATE TABLE SPOUSE(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    PERSON1_ID INTEGER,
    PERSON2_ID INTEGER);
    
INSERT INTO SPOUSE (PERSON1_ID,PERSON2_ID) VALUES(1,2);
INSERT INTO SPOUSE (PERSON1_ID,PERSON2_ID) VALUES(3,4);
INSERT INTO SPOUSE (PERSON1_ID,PERSON2_ID) VALUES(5,8);
INSERT INTO SPOUSE (PERSON1_ID,PERSON2_ID) VALUES(6,9);
INSERT INTO SPOUSE (PERSON1_ID,PERSON2_ID) VALUES(7,10);

--MOVIE STARS AND THEIR WORK
SELECT MOVIESTARS.FULLNAME,MOVIES.TITLE
FROM MOVIESTARS
JOIN MOVIES
ON MOVIESTARS.ID=MOVIES.PERSON_ID;

--MOVIE STARS THAT MARRIED TO EACH OTHER
SELECT A.FULLNAME,B.FULLNAME AS"SPOUSE"
FROM SPOUSE
JOIN MOVIESTARS A 
ON SPOUSE.PERSON1_ID=A.ID
JOIN MOVIESTARS B 
ON SPOUSE.PERSON2_ID=B.ID;


