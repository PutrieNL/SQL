-- display the database ordered by aisle.
SELECT*FROM PUTRIE_STORE ORDER BY AISLE;

--the average price of products in aisle 4.
SELECT AVG (PRICES) "AVG PRICES IN AISLE 4"
FROM PUTRIE_STORE
WHERE AISLE="4";

--the top 3 largest quantity products in the store.
SELECT NAME,QUANTITY
FROM PUTRIE_STORE
ORDER BY QUANTITY DESC
LIMIT 3;

