SELECT*FROM PUTRIE_STORE;

--display the database orderd by prices
SELECT*FROM PUTRIE_STORE ORDER BY PRICES;

--which are the most to least expensive aisle group by aisle and order by prices and quantity addition
SELECT aisle, sum (prices),sum(quantity), sum (prices+quantity) from PUTRIE_STORE GROUP BY aisle ORDER BY SUM(prices+quantity);
